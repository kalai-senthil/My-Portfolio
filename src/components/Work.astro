---
import { Image } from "astro:assets";
import ExtraInfo from "./ExtraInfo.astro";
import type { Work } from "../content/config";
interface Props extends Work {}
const { description, img, name, extraInfos, link } = Astro.props;
---

<section class="flex flex-col md:flex-row md:my-5 gap-5 items-center">
  <Image
    height={300}
    class="rounded-full lg:mr-5 w-40 lg:w-80 aspect-square object-scale-down lg:shadow-lg shadow"
    width={300}
    alt="logo"
    src={img}
  />
  <div class="flex flex-col gap-2">
    <div class="flex lg:gap-8 items-center">
      <h2 class="font-bold text-lg lg:text-4xl">{name}</h2>
      <a href={link} target="_blank" rel="noopener noreferrer">
        <Image
          class="transition-transform rotate-[-90deg] hover:scale-110 cursor-pointer w-8 lg:w-10"
          src="https://api.iconify.design/iconoir/arrow-br.svg"
          height={50}
          width={50}
          alt="link"
        />
      </a>
    </div>
    <p class="line-clamp-3 md:line-clamp-none md:text-lg text-justify text-sm">
      {description}
    </p>
    <section class="flex justify-start mb-5 gap-10 items-center">
      {extraInfos.map((info) => <ExtraInfo {...info} />)}
    </section>
  </div>
</section>
